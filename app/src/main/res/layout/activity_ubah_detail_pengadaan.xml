<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorBottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Produk"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/nama_produk_pengadaan_ubah"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Produk"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/jumlah_produk_pengadaan_ubah"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp">

        <Button
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:text="BATAL"
            android:textSize="15dp"
            android:textColor="@color/colorTop"
            android:background="@drawable/button_ubah"
            android:textStyle="bold"
            android:id="@+id/button_batal_ubah"/>

        <Button
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:text="UBAH"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_hapus"
            android:textStyle="bold"
            android:id="@+id/button_ubah_produk"/>
    </LinearLayout>
</LinearLayout>