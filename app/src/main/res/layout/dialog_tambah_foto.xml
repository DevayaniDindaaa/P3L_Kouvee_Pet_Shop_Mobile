<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/colorBottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Foto Produk"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:gravity="center">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Foto dari Kamera"
        android:drawableStart="@drawable/ic_menu_camera"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:id="@+id/camera"
        android:backgroundTint="@color/colorTop">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih dari Galeri"
        android:drawableStart="@drawable/ic_menu_gallery"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:gravity="left"
        android:id="@+id/gallery"
        android:backgroundTint="@color/colorTop">
    </Button>
</LinearLayout>